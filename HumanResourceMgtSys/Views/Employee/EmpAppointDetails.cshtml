@using System.Data;
@using System.Data.SqlClient;
@using HumanResourceMgtSys.CustomClasses;
@model HumanResourceMgtSys.Models.EmpAppointmentDetails
@{
    ViewBag.Title = "EmpAppointDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script type="text/javascript">
        function fillSubcategory() {
            var value = $("#emp_type option:selected");
            $("#emp_yearcategory").val(value.text());
        }
        function ShowHideDiv() {
            var chkYes = document.getElementById("ddzone");
            var dvtext = document.getElementById("dvtext");
            dvtext.style.display = chkYes.checked ? "block" : "none";
        }
    </script>


     
}

<div class="content-wrapper">
    <div id="headderDivToPrint" style="display: none;">
        <table style="width: 100%;">
            <tr>
                <td style="width: 15%">
                    <img src="~/Content/assets/img/logo.png" />
                </td>
                <td style="text-align: center;">
                    <h1 class="box-title">Human Resource Management System, PWD Uttarakhand</h1>
                </td>
                <td style="width: 15%"></td>
            </tr>
        </table>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <table id="entry17" class="panel panel-info" style="border: 1px solid #c0c0c0; width: 100%;">
            <tr style="background-color: #c0c0c0;">
                <td class="pannelHeadder" colspan="3">
                    <Label ID="Label28" Style="font-weight: 700" Font-Bold="True" Font-Size="Large" ForeColor="White">First Appointment Details</Label>
                </td>
            </tr>
            <tr>
                <td style="text-align: right;" class="auto-style48">
                    <section class="content" style="min-height: 150px;">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="col-md-12  form-group pull-left">
                                    <Label ID="Label29" Class="lablehead pull-left">Mode of Appointment:</Label>
                                    <select ID="ap_type" Class="ddl width150" name="ap_type" Height="29px" style="margin-top:30px;">
                                        <option Value="0">Select</option>
                                        x
                                        <option Value="1">Direct appointment</option>
                                        <option Value="2">Contract</option>
                                        <option Value="3">Adhoc</option>
                                    </select>

                                    <input type="text" ID="txtapp_type" CssClass="textbox" class="hidden" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col-md-12  form-group pull-left">
                                    <Label ID="Label38" Class="lablehead pull-left">Appointment Through:</Label>
                                    <select ID="ap_frm" Class="ddl width150" name="ap_frm" Height="29px">
                                        <option value="0">Select</option>
                                        <option Value="1">UKPSC</option>
                                        <option Value="2">UPNL</option>
                                        <option Value="3">UKSSSC</option>
                                        <option Value="4">UPSSSC</option>
                                        <option Value="5">UPPSC</option>
                                        <option Value="6">Other</option>
                                    </select>

                                    <Label ID="Label11" Font-Bold="True" ForeColor="#CC0000"></Label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col-md-12  form-group pull-left">
                                    <Label ID="Label39" Class="lablehead pull-left">Appointment Order No.:</Label>
                                    <input type="text" Class="form-control width150" id="ap_order" name="ap_order" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="col-md-12  form-group pull-left">
                                    <Label ID="Label40" Class="lablehead pull-left">Date of Order:</Label>
                                    <input type="date" class="form-control pull-right" Style="width: 165px!important" id="dob" name="dob" MinDate="1950-12-31">

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col-md-12  form-group pull-left">
                                    <Label ID="Label41" Class="lablehead pull-left">Date of Joining:</Label>
                                    <input type="date" class="form-control pull-right" Style="width: 165px!important" id="dob" name="dob" MinDate="1950-12-31">
                                    <Label ID="Label71" Font-Bold="True" ForeColor="#CC0000"></Label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col-md-12  form-group pull-left">
                                    <input type="radio" ID="rdT" Checked="True" />
                                    <label for="radiolbl">Technical</label>
                                    <input type="radio" ID="rdNT" />
                                    <label for="radiolbl">Non-Technical</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="col-md-12  form-group pull-left">
                                    <Label ID="Label42" Class="lablehead pull-left">Designation:</Label>
                                    <select ID="txtpost" Class="ddl width150" Height="29px">
                                        <option>select</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="col-md-12  form-group pull-left">
                                    <Label ID="Label44" Class="lablehead pull-left">Pay Scale:</Label>
                                    <input type="text" ID="ddpay" Class="form-control" />

                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-12" style="background-color: #F5F5F5; border-radius: 25px;">
                                <div class="col-md-4 form-group pull-left padding-top-bottom8">
                                    <Label ID="Label53" Class="lablehead pull-left  pull-left-text">Appoint to Office :</Label>
                                    <input type="radio" ID="rdz" name="office" Class="lablehead pull-left" value="Zone" checked="checked" onclick="ShowHideDiv()" />
                                    <label for="radiolbl" Class="lablehead pull-left">Zone</label>
                                    <input type="radio" ID="rdc" name="office" Class="lablehead pull-left" value="Circle" onclick="ShowHideDiv()" />
                                    <label for="radiolbl" Class="lablehead pull-left">Circle</label>
                                    <input type="radio" ID="rdd" name="office" Class="lablehead pull-left" value="Division" onclick="ShowHideDiv()" />
                                    <label for="radiolbl" Class="lablehead pull-left">Division</label>
                                    <input type="radio" ID="rdo" name="office" Class="lablehead pull-left" value="Other" onclick="ShowHideDiv()" />
                                    <label for="radiolbl" Class="lablehead pull-left">Other</label>
                                </div>
                                <div class="col-md-8  form-group pull-left">
                                    <div id="dvtext1">
                                        <Label ID="Label54" Class="lablehead width100 pull-left-text padding-top-bottom8 pull-left" Text="">Select Zone:</Label>
                                        <select ID="ddzone" Class="ddl  pull-left width100 " Height="29px">
                                            <option>select</option>
                                        </select>
                                    </div>
                                    <div id="dvtext2" style="display: none">
                                        <Label ID="Label34" Class="lablehead width100 pull-left-text padding-top-bottom8 pull-left" Text="Select Circle:" Visible="False" class="hidden">Select Circle:</Label>
                                        <select ID="ddcircle" Class="ddl  pull-left width100" Visible="False" Height="29px" class="hidden"></select>
                                    </div>
                                    <div id="dvtext3" style="display: none;margin-right: -20px">
                                        <Label ID="Label43" Class="lablehead width150 pull-left-text padding-top-bottom8 pull-left" Text="" Visible="False" class="hidden">Select Division:</Label>
                                        <select ID="dddivision"  AutoPostBack="True" Class="ddl  pull-left width100 " Visible="False" Height="29px" class="hidden" style="margin-left: -23px;"></select>
                                    </div>
                                    <div id="dvtext4" style="display: none">
                                        <input type="text" ID="txtoffice" Class="form-control pull-left" placeholder="Enter Your Office Name" Visible="False" class="hidden" />

                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </td>
            </tr>
            <tr>
                <td>
                    <section class="content" style="min-height: 150px;">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="col-md-12  form-group center-block text-center">
                                    <Button ID="btapp_p" CssClass="btn btn-sm btn-danger marginUP6" Font-Size="8pt" Text="">&lt; Prev View</Button>
                                    <Label ID="lblapp" Font-Bold="True" ForeColor="#CC0000" Style="text-align: right" Text="Label" Visible="False"></Label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-12  form-group center-block text-center">
                                    <Button ID="btapp_n"
                                            CssClass="btn btn-sm btn-success marginUP6"
                                            Font-Size="8pt">
                                        Next View >
                                    </Button>
                                </div>
                            </div>
                        </div>
                    </section>
                </td>
            </tr>
        </table>
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
            $(function () {
                $("input[name='office']").click(function () {
                    if ($("#rdz").is(":checked")) {
                        $("#dvtext1").show();
                        $("#dvtext4").hide();
                        $("#dvtext3").hide();
                        $("#dvtext2").hide();
                    }
                    else if ($("#rdc").is(":checked")) {
                        $("#dvtext2").show();
                        $("#dvtext1").show();
                        $("#dvtext3").hide();
                        $("#dvtext4").hide();
                    }
                    else if ($("#rdd").is(":checked")) {
                        $("#dvtext3").show();
                        $("#dvtext2").show();
                        $("#dvtext1").show();
                        $("#dvtext4").hide();
                    }
                    else if ($("#rdo").is(":checked")) {
                        $("#dvtext4").show();
                        $("#dvtext3").hide();
                        $("#dvtext2").hide();
                        $("#dvtext1").hide();
                    }
                    else {
                        $("#dvtext1").show();
                    }
                });
            });
        </script>
    }
</div>

